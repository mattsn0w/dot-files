
syntax enable


filetype indent on

set expandtab		" replace those darn tabs with spaces
set shiftwidth=2        " default to 2 spaces shift width
set autoindent          " auto indenting
set smartindent         " Smart?indenting

set pastetoggle=<F2>

" show fold column, fold by markers
set foldcolumn=2
set foldmethod=marker

" indicate when a line is wrapped by prefixing wrapped line with '> '
set showbreak=>\

" always show tab line
set showtabline=2

" highlight search matches
set hlsearch

" colorscheme evening
colorscheme desert

" highlight position of cursor
"set cursorline
"set cursorcolumn

set nocompatible
